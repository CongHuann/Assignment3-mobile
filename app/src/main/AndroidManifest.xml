<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Assignment3">

        <!-- MainActivity - Màn hình chính (Home) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Assignment3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WorkoutPlannerActivity - Màn hình Weekly Planner -->
        <activity
            android:name=".WorkoutPlannerActivity"
            android:exported="false"
            android:theme="@style/Theme.Assignment3" />

        <!-- WorkoutDetailActivity - Màn hình Exercise Detail (tạo sau) -->
        <activity
            android:name=".ExercisesActivity"
            android:exported="false"
            android:theme="@style/Theme.Assignment3" />

        <activity
            android:name=".WorkoutSessionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Assignment3" />

    </application>

</manifest>