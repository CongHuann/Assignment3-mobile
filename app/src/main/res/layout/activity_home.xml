<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_black">

    <!-- HEADER SECTION -->

    <!-- APP TITLE -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/opensans"
        android:text="@string/TrackFit"
        android:textColor="#DDDDDD"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--  SLOGAN  -->
    <TextView
        android:id="@+id/tvSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/opensans"
        android:text="@string/transform"
        android:textColor="#DDDDDD"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- USER AVATAR-->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- MAIN CARDS SECTION - 3 Primary Feature Cards -->

    <!--  CARDS CONTAINER -->
    <LinearLayout
        android:id="@+id/llycards"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSlogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--  CARD 1: WORKOUTS-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWorkouts"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/accent_orange"
            app:cardElevation="20dp"
            android:background="@drawable/home_card_glow_orange"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <!-- Card content layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="32dp">

                <!--Text content -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Card title: "Workouts" -->
                    <TextView
                        android:id="@+id/tvWorkouts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:text="@string/workouts"
                        android:textColor="@android:color/black"
                        android:textSize="22sp" />

                    <!-- Card subtitle-->
                    <TextView
                        android:id="@+id/tvWorkoutsSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:text="@string/build"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--Dumbbell icon -->
                <ImageView
                    android:id="@+id/icDumbell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dumbbell" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD 2: EXERCISES-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardExcercises"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/secondary_gray">

            <!-- Card content layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <!--Text content -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Card title-->
                    <TextView
                        android:id="@+id/tvExcercises"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exercises"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:fontFamily="@font/opensans" />

                    <!-- Card subtitle-->
                    <TextView
                        android:id="@+id/tvExcercisesSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list_of_ex"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensans"/>
                </LinearLayout>

                <!--Activity icon -->
                <ImageView
                    android:id="@+id/icFoodExcercises"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/activity"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- QUICK STATS SECTION - Statistics overview   -->

    <!--  SECTION TITLE -->
    <TextView
        android:id="@+id/tvQuickStatsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/opensans"
        android:text="@string/quick_stats"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSlogan" />

    <!-- STATS CONTAINER-->
    <LinearLayout
        android:id="@+id/llQuickeStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuickStatsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- STAT CARD 1: WORKOUT STREAK -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="@color/secondary_gray"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Energy icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/streak"
                        android:layout_marginEnd="8dp"/>

                    <!--Streak-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/streak"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/opensans"/>
                </LinearLayout>

                <!--Main value-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStreak"
                    android:text="1 days"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="2dp"/>

                <!-- Subtitle-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStreakSub"
                    android:text="@string/workout_day"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/opensans"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- STAT CARD 2: WORKOUT TIME -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/secondary_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Clock icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/clock" />

                    <!-- This week -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:text="@string/this_week"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Main value-->
                <TextView
                    android:id="@+id/tvWorkTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/opensans"
                    android:text="2h"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <!-- Subtitle-->
                <TextView
                    android:id="@+id/tvWorkoutTimeSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:text="@string/workout_time"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>