<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_black">

    <!--Heading-->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/OpenSans"
        android:text="FitRoutine"
        android:textColor="#DDDDDD"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Slogan -->
    <TextView
        android:id="@+id/tvSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/OpenSans"
        android:text="Transform your fitness journey"
        android:textColor="#DDDDDD"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cards -->
    <LinearLayout
        android:id="@+id/llycards"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSlogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Workouts Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWorkouts"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/accent_orange"
            app:cardElevation="20dp"
            android:background="@drawable/home_card_glow_orange"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="32dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWorkouts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/OpenSans"
                        android:text="Workouts"
                        android:textColor="@android:color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tvWorkoutsSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/OpenSans"
                        android:text="Build your strength"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/icDumbell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dumbbell" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Excercises Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardExcercises"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/secondary_gray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvExcercises"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exercises"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:fontFamily="@font/OpenSans" />
                    <TextView
                        android:id="@+id/tvExcercisesSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List of excercises"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/OpenSans"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/icFoodExcercises"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/activity"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Meal Plan Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMealPlan"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/secondary_gray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMealPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meal Plan"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:fontFamily="@font/OpenSans" />
                    <TextView
                        android:id="@+id/tvMealPlanSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track your nutrition"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/OpenSans"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/icFoodMealPlan"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/food"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvQuickStatsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="396dp"
        android:fontFamily="@font/OpenSans"
        android:text="Quick Stats"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSlogan" />

</androidx.constraintlayout.widget.ConstraintLayout>




