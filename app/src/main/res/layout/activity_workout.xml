<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_black">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_gray"
        android:src="@drawable/arrow_big_left"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvPlannerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/opensans"
        android:text="Weekly Planner"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <!--  WEEKDAYS ROW -->
    <HorizontalScrollView
        android:id="@+id/scrollWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/tvPlannerTitle"
        android:layout_marginTop="28dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <LinearLayout
            android:id="@+id/llweekdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Monday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_square_light"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/dumbbell"
                    app:tint="@android:color/white"
                    android:layout_marginTop="-54dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/opensans"
                    android:text="Mon"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Tuesday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_green"/>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/check"
                    app:tint="@android:color/white"
                    android:layout_marginTop="-54dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Wednesday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_gray"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/rest"
                    app:tint="@android:color/white"
                    android:layout_marginTop="-54dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Thursday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_gray"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/dumbbell"
                    app:tint="#888888"
                    android:layout_marginTop="-54dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Friday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_gray"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/dumbbell"
                    app:tint="#888888"
                    android:layout_marginTop="-54dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Saturday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_gray"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/dumbbell"
                    app:tint="#888888"
                    android:layout_marginTop="-54dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Sunday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_circle_gray"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/rest"
                    app:tint="#888888"
                    android:layout_marginTop="-44dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!--  NESTED SCROLL VIEW -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scrollWeek"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:fillViewport="true">

        <!-- Day Plan Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDayPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@color/secondary_gray"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvDayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday - Push Day"
                    android:textColor="@android:color/white"
                    android:textSize="23sp"
                    android:fontFamily="@font/opensans"/>

                <!-- Focus -->
                <TextView
                    android:id="@+id/tvDayFocus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus: Chest, Shoulders, Triceps"
                    android:textColor="#585858"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="2dp"/>

                <!-- Muscle Icons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/heart"
                        android:background="@drawable/bg_square_light"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/fist"
                        android:background="@drawable/bg_square_light"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/timer"
                        android:background="@drawable/bg_square_light"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- EXERCISE LIST-->
                <LinearLayout
                    android:id="@+id/llExerciseList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">
                </LinearLayout>

                <!-- Add Exercise Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddExercise"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_outline_orange"
                    android:text="+ Add Exercise"
                    android:textAllCaps="false"
                    android:textColor="@color/accent_orange"
                    android:textSize="17sp"
                    android:fontFamily="@font/opensans"/>

                <!-- Start Workout Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStartWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_button_orange_rec"
                    android:text="Start Workout"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/opensans"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>