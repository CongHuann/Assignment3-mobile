<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_gray"
                android:src="@drawable/arrow_big_left"
                app:tint="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Exercise Details"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans"/>

            <!-- âœ… ADDED EDIT BUTTON HERE -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_gray"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/accent_orange"/>
        </LinearLayout>

        <!-- âœ… EXERCISE IMAGE/GIF -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardExerciseImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/llHeader">

            <ImageView
                android:id="@+id/ivExerciseImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@color/secondary_gray"
                android:contentDescription="Exercise demonstration"/>

        </androidx.cardview.widget.CardView>

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/secondary_gray"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardExerciseImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Exercise Name -->
                <TextView
                    android:id="@+id/tvExerciseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BENCH PRESS"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensans"
                    android:layout_gravity="center_horizontal"/>

                <!-- Difficulty Badge -->
                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/bg_excercise_item"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The king of chest exercises..."
                    android:textColor="#36454F"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3A3A3A"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Equipment -->
                <TextView
                    android:id="@+id/tvEquipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Equipment: Barbell, Bench"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans"
                    android:drawableStart="@drawable/dumbbell"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/accent_orange"/>

                <!-- Target Muscle -->
                <TextView
                    android:id="@+id/tvTargetMuscle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Primary: Chest"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="8dp"/>

                <!-- Secondary Muscles -->
                <TextView
                    android:id="@+id/tvSecondaryMuscles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Secondary: Triceps, Shoulders"
                    android:textColor="#36454F"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="4dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3A3A3A"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Instructions Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ INSTRUCTIONS"
                    android:textColor="@color/accent_orange"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensans"/>

                <!-- Instructions -->
                <TextView
                    android:id="@+id/tvInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Step one\n\n2. Step two"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3A3A3A"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Tips Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ TIPS"
                    android:textColor="@color/accent_orange"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensans"/>

                <!-- Tips -->
                <TextView
                    android:id="@+id/tvTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tip 1\n\nðŸ’¡ Tip 2"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>